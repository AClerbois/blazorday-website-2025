@page "/"

<!-- Page principale du site BlazorDay -->
@layout MainLayout
    <div class="hero bg-sky text-neutral-light p-8 text-center">
        <h1 class="text-5xl font-bold mb-4" style="color: var(--color-primary);">BlazorDay 2025</h1>
        <p class="text-xl mb-2">25 septembre 2025 &ndash; 16h CET</p>
        <p class="text-lg mb-6">Conférence .NET 10 &amp; Focus Blazor</p>
        <a href="/inscription" class="px-6 py-3 rounded-lg font-semibold border-2" style="border-color: var(--color-primary); color: var(--color-primary);">
            S'inscrire
        </a>
    </div>

    <section class="program p-8 bg-neutral-light">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-primary);">Programme</h2>
        <ul class="list-disc list-inside ml-4">
            <li>Introduction à .NET 10 par <strong>Laurent Bugnion</strong> (Maître de cérémonie)</li>
            <li>Deep dive Blazor avec <strong>Adrien Clerbois</strong></li>
            <li>Architecture Blazor Server & WebAssembly avec <strong>Denis Voituron</strong></li>
            <li>Bonnes pratiques et retours d’expérience par <strong>Christophe "Toss" Peugnet</strong></li>
        </ul>
    </section>

    <section id="speakers" class="speakers p-8">
        <h2 class="text-3xl font-bold mb-6" style="color: var(--color-primary);">Intervenants</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Carte intervenant -->
            <div class="card p-4 shadow-lg rounded-lg text-center bg-white">
                <img src="images/adrien.jpg" alt="Adrien Clerbois" class="mx-auto w-32 h-32 rounded-full mb-4" />
                <h3 class="text-xl font-semibold">Adrien Clerbois</h3>
                <p class="text-sm">Microsoft MVP &bull; Technical Architect</p>
            </div>
            <div class="card p-4 shadow-lg rounded-lg text-center bg-white">
                <img src="images/denis.jpg" alt="Denis Voituron" class="mx-auto w-32 h-32 rounded-full mb-4" />
                <h3 class="text-xl font-semibold">Denis Voituron</h3>
                <p class="text-sm">Technical Architect @@ Microsoft</p>
            </div>
            <div class="card p-4 shadow-lg rounded-lg text-center bg-white">
                <img src="images/toss.jpg" alt="Christophe Peugnet" class="mx-auto w-32 h-32 rounded-full mb-4" />
                <h3 class="text-xl font-semibold">Christophe "Toss" Peugnet</h3>
                <p class="text-sm">Microsoft MVP &bull; Trainer Blazor</p>
            </div>
        </div>
    </section>

    <footer class="footer bg-forest-dark text-neutral-light p-6 text-center">
        <p>&copy; 2025 BlazorDay. Tous droits réservés.</p>
    </footer>
