@inherits LayoutComponentBase

@if (DataBase.ShowAnimation)
{
    <HomeAnimation />
    return;
}

<div @key="@(DataBase.PreviewMode ? "PREVIEW" : null)">
    <FluentLayout>
        <!-- Header -->
        <FluentLayoutItem Area="@LayoutArea.Header" Sticky="true" Style="background-color: var(--blazorday-top-bgcolor);">
            <FluentStack VerticalAlignment="VerticalAlignment.Center">

                <FluentLayoutHamburger @ref="_hamburger" PanelSize="DialogSize.Small" PanelHeader="BlazorDay 2025">
                    <NavMenu Hamburger="@_hamburger" />
                </FluentLayoutHamburger>

                <FluentSpacer />

                <FluentStack HorizontalGap="12px" Width="fit-content">
                    <NavMenu />
                </FluentStack>

                <FluentSpacer />

            </FluentStack>
        </FluentLayoutItem>

        <!-- Content -->
        <FluentLayoutItem Area="@LayoutArea.Content" Style="overflow-x: hidden; overflow-y: scroll; display: grid;">
			<div class="banner" @ondblclick="@(e => SwitchPreviewMode(e))"
				                @onclick="ReplayHomeAnimationAsync">
                <div class="date-text">September 25, 2025</div>
            </div>
            <div class="content">
                @Body
            </div>
        </FluentLayoutItem>

        <!-- Footer -->
        <FluentLayoutItem Area="@LayoutArea.Footer" Sticky="false" Style="display: flex" preview="@DataBase.PreviewMode">
            <div class="footer-copy">
                &copy; BlazorDay Team - 2025
            </div>
            <FluentSpacer />

            <FluentStack HorizontalGap="24px" Width="fit-content">
                <a href="/code-conduct">Code of Conduct</a>
                <a href="/team">Team</a>
                <a href="#" @onclick="@ReplayHomeAnimationAsync">Replay animation</a>
            </FluentStack>
            <FluentSpacer />
        </FluentLayoutItem>

    </FluentLayout>
</div>

@* Add all FluentUI Blazor Providers *@
<FluentProviders />

